<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/color_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/background"
        android:layout_above="@+id/bottom_bar"
        android:layout_marginBottom="5dp"
        android:id="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color1"
            android:background="#f8e81c"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color2"
            android:background="#f6a623"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color3"
            android:background="#d0011b"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color4"
            android:background="#ff68a0"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color5"
            android:background="#9012fe"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color6"
            android:background="#145aaf"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_bar"
        android:background="@color/background"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color7"
            android:background="#00abff"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color8"
            android:background="#4ab722"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color9"
            android:background="#000000"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color10"
            android:background="#9b9b9b"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color11"
            android:background="#ffffff"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/color12"
            android:background="@drawable/non_color"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

</RelativeLayout>
        android:onClick="onCategoryBtnClicked"
        android:tag="drawable/combined_shape"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"
        android:lineSpacingExtra="2sp"
        android:text="Picture \nFrame"
        android:background="@color/white"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="1"
        android:layout_row="10"/>

</GridLayout>

</android.support.v4.widget.NestedScrollView>
</RelativeLayout>

        android:background="@drawable/img_8909_copy_2"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="0"
        android:layout_row="6"/>
    <Button
        android:onClick="onBaseCategoryClicked"
        android:tag="base_shape"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"
        android:lineSpacingExtra="2sp"
        android:text="Pendant"
        android:background="@color/white"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="1"
        android:layout_row="6"/>
    <Button
        android:onClick="onCategoryBtnClicked"
        android:tag="drawable/stencil"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"
        android:lineSpacingExtra="2sp"
        android:text="Coffee \nStencil"
        android:background="@color/white"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="0"
        android:layout_row="7"/>
    <ImageButton
        android:background="@drawable/thumb_img_8905_1024_copy_3"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="1"
        android:layout_row="7"/>
    <ImageButton
        android:background="@drawable/img_8909_copy_3"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="0"
        android:layout_row="8"/>
    <Button
        android:onClick="onCategoryBtnClicked"
        android:tag="drawable/holder_base_shape"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_categories">

<android.support.v4.widget.NestedScrollView
    android:layout_centerHorizontal="true"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/btn1"
        android:background="@drawable/thumb_img_8903_1024"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="0"
        android:layout_row="0"/>
    <Button
        android:onClick="onCategoryBtnClicked"
        android:tag="drawable/opener_base_shape"
        android:id="@+id/t_btn1"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"
        android:lineSpacingExtra="2sp"
        android:text="Bottle \nOpener"
        android:background="@color/white"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="1"
        android:layout_row="0"/>
    <Button
        android:onClick="onCategoryBtnClicked"
        android:tag="drawable/gyring_base_shape"
        android:id="@+id/t_btn2"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"
        android:lineSpacingExtra="2sp"
        android:text="Gyring"
        android:background="@color/white"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="0"
        android:layout_row="1"/>
    <ImageButton
        android:id="@+id/btn2"
        android:background="@drawable/thumb_img_8905_1024"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="1"
        android:layout_row="1"/>
    <ImageButton
        android:background="@drawable/img_8909"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="0"
        android:layout_row="2"/>
    <Button
        android:onClick="onFreeCategoryClicked"
        android:tag="no_image"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"
        android:lineSpacingExtra="2sp"
        android:text="Door \nSign"
        android:background="@color/white"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="1"
        android:layout_row="2"/>
    <Button
        android:onClick="onBaseCategoryClicked"
        android:tag="base_shape"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#28a0aa"
        android:lineSpacingExtra="2sp"
        android:text="Earrings"
        android:background="@color/white"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="0"
        android:layout_row="3"/>
    <ImageButton
        android:background="@drawable/thumb_img_8905_1024_copy"
        android:layout_width="@dimen/categories_btn_width"
        android:layout_height="@dimen/categories_btn_height"
        android:layout_column="1"
        android:layout_row="3"/>
